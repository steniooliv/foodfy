{% extends "./layout.njk" %}

{% block content %}

<main>
  <h2>Gerenciar receitas</h2>

  <div class="cards">
    {% for recipe in recipes %}
      <div class="card">
        <div class="image">
          <img src="{{recipe.image}}" alt="{{recipe.title}}">
        </div>
        <div class="info">
          <h4>{{recipe.title}}</h4>
          <p>{{recipe.author}}</p>
          <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
        </div>
      </div>
    {% endfor %}

  </div>
</main>

{% endblock content %}