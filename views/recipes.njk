{% extends "layout.njk" %}

{% block content %}

  <main>
   <article>
      <div class="cards">

       {% for recipe in recipes %}
          <div class="card">
            <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
            <div>
              <h4 class="title">{{recipe.title}}</h4>
              <p class="chef">por {{recipe.author}}</p>
            </div>
          </div>
        {% endfor %}

      </div>
    </article>
  </main>

  <script src="scripts.js"></script>

{% endblock %}